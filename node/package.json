{
    "name": "todo-api",
    "version": "1.0.0",
    "scripts": {
        "dev": "ts-node-dev src/index.ts",
        "typeorm": "ts-node --esm ./node_modules/typeorm/cli.js -d ./src/config/migrationDataSource.ts",
        "migration:generate": "npm run typeorm -- migration:generate ./src/database/migrations/$npm_config_name",
        "migration:run": "npm run typeorm -- migration:run",
        "migration:revert": "npm run typeorm -- migration:revert",
        "seed:run": "ts-node ./src/database/seeders/run.seed.ts"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.19.2",
        "express-validator": "^7.3.1",
        "pg": "^8.11.5",
        "reflect-metadata": "^0.2.0",
        "typeorm": "^0.3.20"
    },
    "devDependencies": {
        "@types/cors": "^2.8.19",
        "@types/express": "^4.17.21",
        "@types/node": "^20.5.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.4.0"
    }
}
